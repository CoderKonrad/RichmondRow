{{> home/altheader}}

<div class="container container-white">
{{#each posts}}
<!-- BLOG FEED -->

  <div class="row">
    <div class="col-md-7">
      <a href="#">
        <img class="img-fluid"src="/uploads/{{file}}" alt="">
      </a>
    </div>
    <div class="col-md-5">
      <h3>{{title}}</h3>
      <p>{{summary}}</p>
      <p>Posted on {{generateDate data "MMMM Do YYYY"}}</p>
      <a class="btn btn-primary" href="/post/{{slug}}">View Post</a>
    </div>
  </div>
  <hr>

{{/each}}

<!-- PAGINATION -->

<ul class="pagination justify-content-center mb-4">
  {{#paginate current=current pages=pages}}



  {{/paginate}}
</ul>


</div>