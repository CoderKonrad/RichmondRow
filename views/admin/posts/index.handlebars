<h1>All Posts</h1>

<!-- {{>home/form-msgs}} -->

<table class="table  table-bordered">

  <thead>
    <tr>

      <th>Post ID</th>
      <th>File</th>
      <th>Title</th>
      <th>Status</th>
      <th>Category</th>
      <th>Comments</th>
      <th>Date</th>
      <th>Actions</th>

    </tr>
  </thead>

  <tbody>
    <!-- Loop here through all posts -->
    {{#each posts}}
    <tr>

      <td>{{id}}</td>
      <td><img height="50" class="img-responsive" src="/uploads/{{file}}"></td>
      <td>{{title}}</td>
      <td>{{status}}</td>
      <td>{{category.name}}</td>
      <td>{{allowComments}}</td>
      <td>{{generateDate date 'MMMM Do, YYYY'}}</td>
      <td>
          <a href="/admin/posts/edit/{{id}}" class="btn btn-info" style="display:inline-block;">Edit</a>
          <form action="/admin/posts/{{id}}?_method=DELETE" method="post" style="display:inline-block;">
            <button type="submit" class="btn btn-danger" name="button" style="display:inline-block;">Delete</button>
          </form>

          <form action="/admin/posts/potd/{{id}}?_method=post" method="post" style="display:inline-block;">
            <button type="submit" class="btn btn-success" name="button" style="display:inline-block;">POTD</button>
          </form>
      </td>

    </tr>

    {{/each}}

  </tbody>

</table>
